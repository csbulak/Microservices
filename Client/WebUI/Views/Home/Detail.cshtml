@model WebUI.Models.Catalog.CourseViewModel

@{
    ViewBag.Title = "Kurs Detay";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <img src="@Model.StockPictureUrl" class="card-img-top" alt="" />
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Fiyat: @Model.Price.ToString("C")</h4>
            </div>
            <div class="card-footer">
                <div class="d-grid gap-2">
                    <a class="btn btn-primary btn-block" href="#">Sepete Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>