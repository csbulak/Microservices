@model UserViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-title">
                Kullanıcı Bilgileri
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <tr>
                        <td>Kullanıcı Adı</td>
                        <td>@Model.UserName</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Ad</td>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <td>Soyad</td>
                        <td>@Model.LastName</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>